    "effector": "^20.4.0",
    "effector-react": "^20.4.0",
    "emotion-theming": "^10.0.19",
    "polished": "^3.4.1",
    "react": "16.9.0",
    "react-native": "0.61.2",
    "react-native-dialog-input": "^1.0.7",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-image-picker": "^1.1.0",
